<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.compagnon.CompagnonFragment">

    <!-- Dragon Name -->
    <TextView
        android:id="@+id/dragon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lucy la dragonne"
        android:textSize="24sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Level Indicator -->
    <TextView
        android:id="@+id/dragon_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niv. 6"
        app:layout_constraintTop_toBottomOf="@id/dragon_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Bar for Level -->
    <ProgressBar
        android:id="@+id/progress_bar_level"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:progress="60"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_constraintTop_toBottomOf="@id/dragon_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dragon GIF -->
    <ImageView
        android:id="@+id/dragon_gif"
        android:layout_width="296dp"
        android:layout_height="312dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_bar_level" />

    <!-- Jouets and Nourriture Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="Tab navigation for Jouets and Nourriture"
        app:layout_constraintTop_toBottomOf="@id/dragon_gif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@color/white" />

    <!-- GridView for displaying items -->
    <GridView
        android:id="@+id/grid_view_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:columnWidth="100dp"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        android:contentDescription="Items available in the selected category"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
