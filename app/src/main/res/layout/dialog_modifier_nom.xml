<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/textColorPrimaryInverse"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/modif_nom_compagnon_dialog"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/sousTitre"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="16dp" />

    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nouveau_nom_exemple"
        android:inputType="text"
        android:textSize="@dimen/text1"
        android:padding="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:insetRight="30dp"
            android:text="@string/annuler"
            android:textSize="@dimen/bouton"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirmer"
            android:textSize="@dimen/bouton"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

    </LinearLayout>
</LinearLayout>
