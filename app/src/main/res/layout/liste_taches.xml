<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/liste_background_color"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layoutInfoTache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/listName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Name" />

            <TextView
                android:id="@+id/listType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/listName"
                android:layout_marginStart="5dp"
                android:text="type" />

            <ImageView
                android:id="@+id/listTypeImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon"
                android:contentDescription="typeImageDesc"
                android:layout_toEndOf="@id/listType"
                android:layout_below="@id/listName"/>

            <TextView
                android:id="@+id/listImportance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="importance"
                android:layout_below="@id/listName"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"/>

        </RelativeLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/listSwitchTermine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>