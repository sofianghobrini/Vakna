<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialogTitreRelacherCompagnon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="center"
        android:text="@string/titre_relacher"
        android:textSize="30dp"
        android:textColor="@color/couleurTitre"
        android:contentDescription="@string/nom_application" />

    <TextView
        android:id="@+id/dialogTextWarning"
        android:layout_width="318dp"
        android:layout_height="60dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:text="@string/relacher_compagnon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boutonRelacher"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/red"
            android:text="@string/aurevoir" />

        <Button
            android:id="@+id/boutonAnnuler"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/purple_500"
            android:text="@string/refus_relacher" />

    </LinearLayout>
</LinearLayout>
