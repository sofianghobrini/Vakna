<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialogTitre"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:scaleType="center"
        android:text="@string/dialog_titre_archive"
        android:textSize="@dimen/titre"
        android:textColor="@color/couleurTitre"
        android:contentDescription="@string/nom_application" />

    <TextView
        android:id="@+id/dialogTexteWarning"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/dialog_texte_reactive"
        android:textSize="@dimen/text1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" />

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="92dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boutonReactiver"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/red"
            android:text="@string/bouton_reactive"
            android:textSize="@dimen/bouton" />

        <Button
            android:id="@+id/boutonAnnuler"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/gray"
            android:text="@string/annuler"
            android:textSize="@dimen/bouton" />

    </LinearLayout>
</LinearLayout>
