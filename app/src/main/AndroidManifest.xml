<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.vakna">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vakna"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Vakna">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AjouterTacheActivity"
            android:label="Ajouter Tâche" />
        <activity android:name=".GererTachesActivity"
            android:label="Gérer Tâches" />
        <activity android:name=".ModifierTacheActivity"
            android:label="Modifier Tâche" />
        <activity android:name=".AjouterProjetActivity"
            android:label="Ajouter Projet" />
        <activity android:name=".GererProjetsActivity"
            android:label="Gérer Projets" />
        <activity android:name=".ModifierProjetActivity"
            android:label="Modifier Projet" />
        <activity android:name=".CreerCompagnonActivity"
            android:label="Créer le compagnon" />
        <activity android:name=".DetailsObjetActivity"
            android:label="Créer le compagnon" />
        <service
            android:name=".notifications.NotificationService"
            android:enabled="true"
            android:exported="false"/>
        <receiver android:name=".notifications.NotificationReceiver" />
    </application>

</manifest>